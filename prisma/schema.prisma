generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// AUTHENTICATION MODELS 

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  hasOnboarded  Boolean @default(false)
  preferredOdds String  @default("DECIMAL")
  currency      String  @default("MXN")

  sessions Session[]

  // Domain
  runs         Run[]
  picks        Pick[]
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --------------------------------------
// CORE BUSINESS MODELS (Bets Core)
// --------------------------------------

enum PickStatus {
  PENDING
  WON
  LOST
  PUSH
  MANUAL_REVIEW
}

enum Sport {
  NFL
  SOCCER
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  MANUAL_ADJUSTMENT
}

model Run {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  startedAt DateTime  @default(now())
  endedAt   DateTime?
  isActive  Boolean   @default(true)

  picks        Pick[]
  transactions Transaction[]

  createdAt DateTime @default(now())

  @@index([userId, isActive])
}

model Pick {
  id String @id @default(cuid())

  userId String
  runId  String

  sport String @default("NFL")

  isParlay    Boolean @default(false)
  legs        Int?    @default(1)
  composition String? @default("SINGLE")

  // Hybrid mode
  isManual         Boolean @default(false)
  eventDescription String?

  league   String?
  homeTeam String?
  awayTeam String?

  matchDate DateTime
  selection String
  odds      Float
  stake     Float
  bonus     Float      @default(0)
  status    PickStatus @default(PENDING)

  settledAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  run  Run? @relation(fields: [runId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([userId])
  @@index([runId])
  @@index([status])
}

model Transaction {
  id String @id @default(uuid())

  type        TransactionType
  amount      Float
  description String?

  userId String
  runId  String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  run  Run? @relation(fields: [runId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([runId])
}
